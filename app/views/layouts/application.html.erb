<!DOCTYPE html>
<html>
<head>
  <title>Tellum</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% [:notice, :error, :alert].each do |level| %>
    <% unless flash[level].blank? %>
        <div class="alert-message">
          <%= content_tag :p, flash[level] %>
        </div>
    <% end %>
<% end %>
<%= yield %>

</body>
</html>
